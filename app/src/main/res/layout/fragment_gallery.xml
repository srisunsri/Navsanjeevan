<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/violet_background">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- ImageView elements from img1 to img11 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img1"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img2"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img3"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <!-- Continue adding ImageView elements for img4 to img11 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img4"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img5"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img6"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img7"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img8"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img9"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img10"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/box_shadow"
                android:src="@drawable/img11"
                android:elevation="4dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
