<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet_background"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:paddingLeft="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/rajdhani_medium"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Vision for Change"
            android:textColor="@android:color/black"
            android:fontFamily="@font/rajdhani_medium"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navsanjeevan Social Trust aims to foster systemic and social change in the lives of marginalized communities by providing access to quality education and better livelihood opportunities."
            android:textColor="@android:color/black"
            android:fontFamily="@font/rajdhani_medium"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/img8"
            android:contentDescription="Vision for Change"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Core Values"
            android:textColor="@android:color/black"
            android:fontFamily="@font/rajdhani_medium"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We uphold excellence, accountability, integrity, and collaboration in all our endeavors."
            android:textColor="@android:color/black"
            android:fontFamily="@font/rajdhani_medium"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/img9"
            android:contentDescription="Core Values"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Goals"
            android:textColor="@android:color/black"
            android:fontFamily="@font/rajdhani_medium"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empowering marginalized communities, promoting education, women empowerment, poverty alleviation, community development, agricultural development, advocacy, social justice, health, and sanitation."
            android:textColor="@android:color/black"
            android:fontFamily="@font/rajdhani_medium"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/img10"
            android:contentDescription="Our Goals"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
