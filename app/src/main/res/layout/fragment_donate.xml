<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/violet_background"
    tools:context=".DonateActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDonateUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DONATE US"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/rajdhani_medium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingBottom="8dp"/>

            <ImageView
                android:id="@+id/ivQrCode"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/img_qr"
                android:layout_gravity="center"
                android:paddingBottom="16dp"/>

            <TextView
                android:id="@+id/tvBankDetailsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Details"
                android:textColor="@android:color/black"
                android:fontFamily="@font/rajdhani_medium"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tvBankDetailsContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navsanjeevan Social Trust\nState Bank of India\nA/C Details - 41207743447\nIFSC- SBIN0013547\nBranch - Pashan Branch 13547\nMICR Code: 411002085"
                android:textColor="@android:color/black"
                android:fontFamily="@font/rajdhani_medium"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>
